<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create database" author="ivan mataras">
        <comment>create database</comment>

        <createTable tableName="organization">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="routes">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="roles">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="character varying(32)">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>


    </changeSet>

</databaseChangeLog>